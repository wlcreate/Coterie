<!DOCTYPE html>
<html>
  <head>
    <title>Mod2ProjectApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">coterie</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">About</a></li>
          <li><a href="/users/:user_id/meetings">My Meetings</a></li>
          <li><a href="/users/:id">My Profile</a></li>
          <li><a href="/categories">Explore Meetings</a></li>
          <li><a href="/meetings/new">Host a Meeting</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
              <% if check_if_user_is_logged_in %>
              <li>
                <%# Logged In as: <%= @current_user.full_name %>
                <%= link_to "Log Out", logout_path, method: :delete%>
              </li>
              <% else %>
              <li>
                <%= link_to "Sign Up", '/signup' %>
              </li>
              <li>
                <%= link_to "Log-In", login_path %>
              </li>
              <% end %>
          <!-- <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li> -->
        </ul>
      </div>
    </nav>

    <%= yield %>
    
  </body>
</html>
