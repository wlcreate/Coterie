<h1> Edit <%= @user.full_name%>'s Profile </h1>

<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %> <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %> <br>
    <%= f.label :username %>
    <%= f.text_field :username %> <br>
    <%= f.label :bio %>
    <%= f.text_area :bio %> <br>
    <%= f.submit "Update" %>
    <% end %>